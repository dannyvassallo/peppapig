<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Use title if it's in the page YAML frontmatter -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <%= partial 'partials/meta-seo' %>
    <%= stylesheet_link_tag :site %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-77320223-1', 'auto');
      ga('send', 'pageview');

    </script>
  </head>

  <body class="<%= page_classes %>">
    <%= javascript_include_tag :init_facebook %>
    <%= partial 'partials/masthead' %>
    <%= partial 'layouts/partials/navbar' %>
    <main>
      <!-- CONTENT SHOWS HERE -->
      <%= yield %>
      <div class="sky"></div>
      <div class="grass">
        <div id="muddy-peppa" class="peppamud hide-on-small-only disappear">
          <img class="shadowed" src="https://s3.amazonaws.com/myfangate.com/peppapig/mudpuddle.gif">
        </div>
      </div>
    </main>
    <%= partial 'layouts/partials/footer' %>
    <%= partial "partials/preloader" %>
    <%= javascript_include_tag :all %>
  </body>
</html>
